header.header 
        .header__lines
            .header__line 
            .header__line
        .header__btns
            a(href="#").header__order 
                h3 Корзина
                img(src="./svg/header/basket.svg" alt="icons")
                p 0
            a(href="#").header__basket 
                h3 Заказать столик
                img(src="./svg/header/notif.svg" alt="icons")
        .containers 
            .header__menu 
                img(src="./svg/header/menu.svg" alt="menu")
            .header__lang 
                select(class="js-select-langs" name="lang" style="display: none")
                    option(value="default" selected="") EN
                    option(value="RU") RU
                    option(value="UK") UK
            a(href="/").header__logo.header__logo-b
                //- .header__logo-b - синий текст
                //- .header__logo-w - белый текст
                img(src="./svg/header/logo-head.svg" alt="logo")
                img(src="./svg/header/logo-text.svg" alt="logo" class='header__logo-blue')
                img(src="./svg/header/logo-texts.svg" alt="logo" class='header__logo-white')
            .header__circle
